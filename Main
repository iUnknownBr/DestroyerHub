-- Carrega a biblioteca Fluent
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

-- Cria a janela principal
local Window = Fluent:CreateWindow({
    Title = "Destroyer Hub - dsc.gg/gamesdest",
    SubTitle = "By iUnknownBr",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Darker"
})

-- Cria a aba com o nome `</>` (colocando a barra no meio)
local MainTab = Window:AddTab({
    Title = "</> Executar", -- Nome correto com barra no meio
    Icon = ""  -- O ícone está em branco, já que a barra está no nome
})

-- Adiciona o botão para o script Native
MainTab:AddButton({
    Title = "Native Script", -- Nome do botão para o script Native
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Native-lab/Native/main/loader.lua"))() -- Carrega o script do Native
    end
})

-- Adiciona o botão para o Speed Hub X Script
MainTab:AddButton({
    Title = "Speed Hub X",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
    end
})

-- Adiciona o botão para o Bonk Hub Script
MainTab:AddButton({
    Title = "Bonk Hub",
    Callback = function()
        loadstring(game:HttpGet("https://bonkhubloader.netlify.app",true))()
    end
})

-- Adiciona o botão para o Alchemy Hub Script
MainTab:AddButton({
    Title = "Alchemy Hub",
    Callback = function()
        loadstring(game:HttpGet("https://scripts.alchemyhub.xyz"))()
    end
})

-- Configurações e Gerenciamento
local SettingsTab = Window:AddTab({ Title = "Configurações", Icon = "settings" })
InterfaceManager:SetLibrary(Fluent)
SaveManager:SetLibrary(Fluent)

InterfaceManager:SetFolder("ScriptHub")
SaveManager:SetFolder("ScriptHubConfigs")

InterfaceManager:BuildInterfaceSection(SettingsTab)
SaveManager:BuildConfigSection(SettingsTab)

Window:SelectTab(1)

-- Carrega configuração automática, se disponível
SaveManager:LoadAutoloadConfig()
